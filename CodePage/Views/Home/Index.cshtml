@model ViewModel
<section id="banner" class="owl-carousel">
    @foreach (Banner item in Model.Banners)
    {
        <div class="banner-item" style="background-color: @item.Color;">
            <div class="container">
                <div class="row banner-wrapper">
                    <div class="d-flex align-items-center py-5">
                        <div class="col-md-8">
                            <h1 class="banner-heading">@item.Title</h1>
                            <p class="banner-text">@item.Subtitle</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
<section id="education">
    <div class="container">
        <div class="row" style="height: 100vh;">
            <div class="d-flex align-items-center">
                <div class="col-md-6">
                    <div class="education-text py-5 designed">
                        <h2>tədris</h2>
                        <h3>sahələri</h3>
                        <img src="images/sep-line.png" alt="">
                        <p>İnformasiya Texnologiyaları sahəsində bugünün və gələcəyin ən tələb edilən istiqamətləri</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="container">
                        <div class="row">
                            @foreach (Category item in Model.Categories)
                            {
                            <div class="col-6 ed-category-wrapper ed-category-one ed-category">
                                <a asp-controller="Group" asp-action="Index" asp-route-id="@item.Id">
                                    <div>
                                        <img src="~/images/@item.Image">
                                        <h4>@item.Name</h4>
                                    </div>
                                </a>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
