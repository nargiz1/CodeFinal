@model List<Banner>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Banners</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Subtitle</th>
                        <th>Color</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Title</th>
                        <th>Subtitle</th>
                        <th>Color</th>
                        <th>Settings</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (Banner item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Subtitle</td>
                            <td>
                                <div style="border-radius: 100%; width: 30px; height:30px; background-color: @item.Color"></div>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mr-1">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mr-1">
                                    <i class="fas fa-fw fa-wrench"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mr-1">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


